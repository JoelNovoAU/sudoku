<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="405dp"
        android:layout_height="364dp"
        android:layout_marginTop="24dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnNuevaPartida"
        android:layout_width="221dp"
        android:layout_height="63dp"
        android:layout_marginTop="316dp"
        android:backgroundTint="#1565C0"
        android:padding="12dp"
        android:text="@string/nueva_partida"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnPuntuaciones"
        android:layout_width="218dp"
        android:layout_height="64dp"
        android:layout_marginTop="40dp"
        android:backgroundTint="#00695C"
        android:padding="12dp"
        android:text="@string/puntuaciones"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnNuevaPartida" />


    <Button
        android:id="@+id/btnSalir"
        android:layout_width="219dp"
        android:layout_height="58dp"
        android:layout_marginTop="40dp"
        android:backgroundTint="#C62828"
        android:padding="12dp"
        android:text="@string/salir"
        android:textColor="#FFFFFF"
        android:textColorLink="#9E3E3E"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnPuntuaciones" />

</androidx.constraintlayout.widget.ConstraintLayout>

